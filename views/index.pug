extends structure
block content
  .row
    .col-md-12
      h4 Mode
      select#mode.form-control
        option(value="static") Static
        option(value="turn") Stepper
        option(value="random") Random
        option(value="time") Time
        option(value="timetable") Timetable
        option(value="schedule") Schedule
        option(value="reset") Reset
  .row#turnDurationLine
    .col-md-12
      h4 Duration
      select#turnDuration
        option(value="5") 5 seconds
        option(value="10", selected) 10 seconds
        option(value="30") 30 seconds
        option(value="60") 1 minute
        option(value="300") 5 minutes
        option(value="600") 10 minutes
  .row#turnVariationLine
    .col-md-12
      h4 Variation
      select#turnVariation
        option(value="0", selected) 0 seconds
        option(value="1") 1 seconds
        option(value="5") 5 seconds
        option(value="10") 10 seconds
        option(value="30") 30 seconds
        option(value="60") 1 minute
        option(value="300") 5 minute
        option(value="600") 10 minute
  .row#randomDurationLine
    .col-md-12
      h4 Duration
      select#randomDuration
        option(value="5") 5 seconds
        option(value="10", selected) 10 seconds
        option(value="30") 30 seconds
        option(value="60") 1 minute
        option(value="300") 5 minutes
        option(value="600") 10 minutes
  .row#randomVariationLine
    .col-md-12
      h4 Variation
      select#randomVariation
        option(value="0", selected) 0 seconds
        option(value="1") 1 seconds
        option(value="5") 5 seconds
        option(value="10") 10 seconds
        option(value="30") 30 seconds
        option(value="60") 1 minute
        option(value="300") 5 minute
        option(value="600") 10 minute
  .row#scheduleForm
    .col-md-12
      div.form-inline
        div.form-group.form-field
          label(for='from')
          input#inputFrom.form-control.form-input(type='text', placeholder='From' name='from')
        button#oppositeButton.btn.round-button(type='submit')
          p &#8646;
        div.form-group.form-field
          label(for='to')
          input#inputTo.form-control(type='text', placeholder='To' name='to')
      button#scheduleButton.btn(type='submit') Search Connection
  .row
    .col-md-12
      h4 Message
      #modules
